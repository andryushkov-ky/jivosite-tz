.logo {
    display: flex;
    justify-content: space-between;
    padding: 50px 0 0 31px;
}

.logo__img {
    @mixin icon "svg/logo.svg", auto, 34px;
    margin-left: 4px;
}

.logo__desc {
    display: block;
    margin: 6px 0 0 3px;
    font-size: 14px;
    color: #aec1dc;
}

@media only screen and (max-width: 768px) {
    .logo {
        padding: 10px 15px 10px 31px;
        border-bottom: 1px solid #dae3f0;
    }
}